{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Spring Batch Job Overview",
    "tags": ["spring-batch", "jobs", "overview"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "piechart",
        "title": "Job Success vs Failure (Last 24h)",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(increase(spring_batch_job{status=\"COMPLETED\"}[1d]))",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(increase(spring_batch_job{status=\"FAILED\"}[1d]))",
            "legendFormat": "Failure"
          }
        ],
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right"
          },
          "pieType": "pie",
          "displayLabels": ["percent", "value"]
        },
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0}
      },
      {
        "type": "table",
        "title": "Currently Running Jobs",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "spring_batch_job_active",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        },
        "options": {
          "showHeader": true
        },
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0}
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  },
  "overwrite": false
} 